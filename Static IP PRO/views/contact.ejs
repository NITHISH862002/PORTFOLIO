</head>
<body>
   
    <h2 class="head"> <a href="/" style="text-decoration:none;color:white; float:right">HOME</a></h2>
   
    
    <div class="git">
        <h1>WANNA DISCUSS ?</h1>  
        <img src="css\img\pexels-fauxels-3183177-removebg-preview.png" alt="" height=400px>               
    
    
    <form  action="/contact" method="POST">
        
        <h1 name="hi" class="heading">GET IN TOUCH</h1>       
        <div class="mb-4">
          <input name="name" placeholder="NAME" class="input" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="mb-4">
          <input name="mail" placeholder="EMAIL" class="input " type="email" class="form-control" id="exampleInputPassword1">
        </div>
        
        <div class="mb-4">
            <textarea name="msg"  placeholder="YOUR MESSAGE" class="input "  class="form-control" id="exampleInputPassword1"></textarea>
          </div>
          <!-- <button type="submit" class="btn ">Submit</button> -->
        <input type="submit" class="btn" placeholder="LETS TALK"></input>
        </form>
    </div>

    <script>
        $(document).ready(function(){
	$(window).scroll(function () {
			if ($(this).scrollTop() > 45) {
				$('#back-to-top').fadeIn();
			} else {
				$('#back-to-top').fadeOut();
			}
		});
		// scroll body to 0px on click
		$('#back-to-top').click(function () {
			$('body,html').animate({
				scrollTop: 0
			}, 600);
			return false;
		});
});
    </script>
    
</body>
